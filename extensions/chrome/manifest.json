{
    // Required
    "manifest_version": 2,
    "name": "Find that Dress!",
    "version": "0.9.3",

    // Recommended
    "description": "Click on the pink button to see fashion items inspired by the image :)",

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "exclude_matches": [
                "*://*.facebook.com/*",
                "*://*.google.com/*",
                "*://*.whatsapp.com/*",
                "*://*.messenger.com/*"
            ],
            "js": ["run_ext.js"],
            "run_at": "document_start"
        }
    ],

    "permissions": [
        "https://*.trendi.guru/*"
    ],

    "web_accessible_resources": []
}
