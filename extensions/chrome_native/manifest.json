{
    // Required
    "manifest_version": 2,
    "name": "Find that Dress! (Native)",
    "version": "0.9",

    // Recommended
    "description": "Click on the purple F button to see fashion items inspired by the image :)",

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "exclude_matches": ["*://www.facebook.com/*", "*://www.messenger.com/*", "*://*.google.com/*"],
            "run_at": "document_end",
            "js": ["bootstrap_script_tag.js","b_plugin.js"]
        }
    ],

    "permissions": ["http://*/*", "https://*/*"],

    "web_accessible_resources": ["http://*/*", "https://*/*"],
    
    "content_security_policy": "script-src 'self' https://cdn.mxpnl.com/libs/*; object-src 'self'"
}