{
  "name": "fzz-plugin",
  "version": "1.0.0",
  "description": "Fazzâ„¢ plugin for websites, Chrome, demo, and internal usage",
  "main": "plugin/js/plugin.js",
  "scripts": {
    "init": "npm i -g webpack",
    "start": "npm run watch",
    "stop": "pkill -f python.*HTTP.*4443",
    "test": "webpack --progress && node nightmareTest",
    "serve": "python -c \"import BaseHTTPServer, SimpleHTTPServer;import ssl;httpd = BaseHTTPServer.HTTPServer(('localhost', 4443), SimpleHTTPServer.SimpleHTTPRequestHandler);httpd.socket = ssl.wrap_socket (httpd.socket, certfile='./server.pem', server_side=True);httpd.serve_forever()\"",
    "watch": "webpack --watch --progress",
    "bundle": "webpack & wait && cp b_plugin.js extensions/chrome_native/b_plugin.js",
    "bundle_chrome": "jspm bundle-sfx extensions/chrome/es6_run_ext.js extensions/chrome/run_ext.js && echo \"\nPlease go to chrome://extensions and reload the Chrome Extension\n\"",
    "deploy": "jspm bundle-sfx --minify app/desktop.js app/b_desktop.js & jspm bundle-sfx --minify plugin/js/plugin.js fzz.min.js & wait && cp fzz.min.js b_plugin.js",
    "publish": "./upload_to_gs.sh fzz"
  },
  "author": "Trendi Guru Ltd.",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/trendiguru/fzz-plugin.git"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "es6-promise": "",
    "imagesloaded": "",
    "js-cookie": "",
    "mixpanel-browser": "",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "whatwg-fetch": ""
  },
  "devDependencies": {
    "autoprefixer": "",
    "babel-core": "",
    "babel-generator": "",
    "babel-loader": "",
    "babel-polyfill": "",
    "babel-preset-es2015": "",
    "babel-preset-react": "",
    "css-loader": "",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "",
    "nightmare": "",
    "node-sass": "",
    "postcss-loader": "",
    "sass-loader": "",
    "webpack": ""
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "globals": {
      "React": false,
      "ReactDOM": false
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/trendiguru/fzz-plugin/issues"
  },
  "homepage": "https://github.com/trendiguru/fzz-plugin#readme",
  "keywords": []
}
